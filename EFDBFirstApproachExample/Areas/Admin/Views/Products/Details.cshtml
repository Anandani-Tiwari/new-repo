@model EFDBFirstApproachExample.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<h2>Details</h2>
<table class="table">
    <tr>
        <th>ProductId</th>
        <td>@Model.ProductId</td>
    </tr>
    <tr>
        <th>ProductName</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price.Value.ToString("C")</td>
    </tr>
    <tr>
        <th>DateOfPurchase</th>
        <td>@Model.DateOfPurchase.Value.ToString("d/M/yyyy")</td>
    </tr>
    <tr>
        <th>AvailabilityStatus</th>
        <td>@Model.AvailabilityStatus</td>
    </tr>
    <tr>
        <th>CategoryId</th>
        <td>@Model.CategoryId</td>
    </tr>
    <tr>
        <th>BrandId</th>
        <td>@Model.BrandId</td>
    </tr>

</table>
<a href="/admin/products/index">Back To Products</a>
