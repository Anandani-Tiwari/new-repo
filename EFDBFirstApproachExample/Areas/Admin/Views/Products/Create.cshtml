@model EFDBFirstApproachExample.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Products",new { area="Admin"}, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-row">
        <div class="col-md-6 form-group">
            @Html.LabelFor(temp => temp.ProductName)
            @Html.TextBoxFor(temp=> temp.ProductName,new{placeholder= "ProductName" ,@class= "form-control" })

            @*<label for="ProductName">Product Name</label>
            <input type="text" class="form-control" id="ProductName" placeholder="ProductName" name="ProductName" required />*@
        </div>
        <div class="col-md-6 form-group">
            @Html.LabelFor(temp => temp.ProductId)
            @Html.TextBoxFor(temp => temp.ProductId, new { placeholder = "ProductId" , @class = "form-control" })

            @*<label for="ProductId">Product Id</label>
            <input type="text" class="form-control" id="ProductId" placeholder="ProductId" name="ProductId" />*@
        </div>
        <div class="col-md-6 form-group">
            @Html.LabelFor(temp => temp.Price)
            @Html.TextBoxFor(temp => temp.Price, new { placeholder = "Price" , @class = "form-control" })

            @*<label for="ProductName">Price</label>
            <input type="text" class="form-control" id="Price" placeholder="Price" name="Price" />*@
        </div>
        <div class="col-md-6 form-group">
            @Html.LabelFor(temp => temp.DateOfPurchase)
            @Html.TextBoxFor(temp => temp.DateOfPurchase, new { placeholder = "DateOfPurchase" , @class = "form-control" })

            @*<label for="DateOfPurchase">DateOfPurchase</label>
            <input type="date" class="form-control" id="DateOfPurchase" placeholder="DateOfPurchase" name="DateOfPurchase" />*@
        </div>
        <div class=" form-check col-md-6">
            @* static drop down *@
            @*@Html.LabelFor(temp => temp.AvailabilityStatus)
        @Html.DropDownListFor(temp => temp.AvailabilityStatus, new List<SelectListItem>{
           new SelectListItem(){Text="In Stock" ,Value="InStock" },
           new SelectListItem(){Text="Out Of Stock" ,Value="OutOfStock" }
           },"Please select",new { @class = "form-control" })*@
            @Html.LabelFor(temp => temp.AvailabilityStatus, new { @class = "form-check-label" })
            <div class="form-check">
                @Html.RadioButtonFor(temp => temp.AvailabilityStatus, "InStock", new { @class = "form-check-input", id = "InStock" })
                <label for="InStock" class="form-check-label">In Stock</label>
            </div>
            <div class="form-check">
                @Html.RadioButtonFor(temp => temp.AvailabilityStatus, "OutOfStock", new { @class = "form-check-input" })
                <label for="OutOfStock" class="form-check-label">Out Of Stock</label>
            </div>
           
            @*<label for="ProductName">AvailabilityStatus</label>
        <input type="text" class="form-control" id="AvailabilityStatus" placeholder="AvailabilityStatus" name="AvailabilityStatus" />*@
        </div>
        <div class="col-md-6 form-group">
            @* dynamic drop down *@
            @Html.LabelFor(temp => temp.BrandId)
            @Html.DropDownListFor(temp=>temp.BrandId,new SelectList(ViewBag.Brands,"BrandId","BrandName"),"Please select",new {@class="Form-control"})
            
            @*<label for="ProductName">BrandId</label>
            <input type="text" class="form-control" id="BrandId" placeholder="BrandId" name="BrandId" />*@
        </div>
        <div class="col-md-6 form-group">
            @Html.LabelFor(temp => temp.CategoryId)
            @Html.DropDownListFor(temp => temp.CategoryId, new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"), "Please select", new { @class = "Form-control" })

            @*<label for="ProductName">CategoryId</label>
        <input type="text" class="form-control" id="CategoryId" placeholder="CategoryId" name="CategoryId" />*@
        </div>
        <div class="form-group col-md-6">
            <label for="Image">Image</label>
            <input type="file" class="form-control-file" id="Image" name="Photo" />
        </div>
    </div>

    <button class="btn btn-success" type="submit">Create</button>
    <a class="btn btn-danger" href="/admin/products/index">Cancel</a>
}




