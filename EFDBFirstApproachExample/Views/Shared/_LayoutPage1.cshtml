<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel=" stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/kendo/2023.1.425/material-smoke.css" rel="stylesheet" />
    @*<link href="~/Content/kendo/2023.1.425/material-pacific-dark.css" rel="stylesheet" />*@

    <script src="~/Scripts/kendo/2023.1.425/jquery.min.js"></script>
    <script src="~/Scripts/kendo/2023.1.425/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo/2023.1.425/kendo.aspnetmvc.min.js"></script>
    <title>@ViewBag.Title</title>
    <style>
       

        .field-validation-error {
            color: red;
        }

        .validation-summary-errors {
            color: red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-info navbar-dark">
        <a class="navbar-brand" href="#">Company</a>

        <ul class="navbar-nav">
            <li class="nav-item"> <a class="nav-link" href="/home/index">Home</a> </li>

            @if (User.Identity.IsAuthenticated == false)
            {
                <li class="nav-item"><a class="nav-link" href="/account/register">Register</a></li>
                <li class="nav-item"><a class="nav-link" href="/account/login">Login</a></li>
            }
            <li class="nav-item"> <a class="nav-link" href="/products/index">Product</a> </li>
            @if (User.Identity.IsAuthenticated == true)
            {
                <li class="nav-item"><a class="nav-link" href="/account/myprofile">MY Profile</a></li>
                <li class="nav-item"><a class="nav-link" href="/account/logout">Logout</a></li>
            }
        </ul>
        @if (User.Identity.IsAuthenticated == true)
        {
           
            <div class="text-white">
                Welcome to,@User.Identity.Name

            </div>
        }
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
